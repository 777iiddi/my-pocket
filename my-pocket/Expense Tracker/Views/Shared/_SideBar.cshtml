@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject MY_POCKET.Models.ApplicationDbContext context

@{
    var totalIncome = context.Transactions
        .Where(x => x.Category.Type == "Income")
        .Sum(x => x.Amount);

    var totalExpense = context.Transactions
        .Where(x => x.Category.Type == "Expense")
        .Sum(x => x.Amount);

    var balance = totalIncome - totalExpense;
}

<style>
    .finance-sidebar {
        height: 100vh;
        width: 280px;
        background: linear-gradient(135deg, #1a237e, #0d47a1);
        color: white;
        padding: 25px;
        overflow-y: auto;
        box-shadow: 4px 0 15px rgba(0, 0, 0, 0.1);
    }

    .brand-section {
        padding: 15px 0;
        margin-bottom: 30px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .brand-title {
        font-size: 24px;
        font-weight: 700;
        color: #fff;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .brand-title i {
            font-size: 28px;
            color: #64b5f6;
        }

    .nav-section {
        margin-bottom: 20px;
    }

    .nav-label {
        font-size: 12px;
        text-transform: uppercase;
        color: #90caf9;
        margin-bottom: 15px;
        letter-spacing: 1px;
    }

    .nav-link {
        display: flex;
        align-items: center;
        padding: 12px 15px;
        color: #e3f2fd;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.3s ease;
        margin-bottom: 5px;
    }

        .nav-link:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

        .nav-link.active {
            background: #64b5f6;
            color: #fff;
        }

    .nav-icon {
        width: 20px;
        margin-right: 12px;
        font-size: 18px;
    }

    .balance-card {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 20px;
        margin-top: 30px;
    }

    .balance-label {
        font-size: 13px;
        color: #90caf9;
        margin-bottom: 10px;
        letter-spacing: 0.5px;
    }

    .balance-amount {
        font-size: 24px;
        font-weight: 600;
        color: #fff;
    }
</style>

<div class="finance-sidebar">
    <div class="brand-section">
        <a href="/" class="brand-title">
            <i class="fas fa-wallet"></i>
            <span>my pocket</span>
        </a>
    </div>

    <div class="nav-section">
        <div class="nav-label">Main Menu</div>
        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "active" : "")"
           asp-controller="Dashboard" asp-action="Index">
            <i class="nav-icon fas fa-chart-pie"></i>
            <span>Dashboard</span>
        </a>
        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Transaction" ? "active" : "")"
           asp-controller="Transaction" asp-action="Index">
            <i class="nav-icon fas fa-exchange-alt"></i>
            <span>Transactions</span>
        </a>
        <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Category" ? "active" : "")"
           asp-controller="Category" asp-action="Index">
            <i class="nav-icon fas fa-tags"></i>
            <span>Categories</span>
        </a>
    </div>

    <div class="balance-card">
        <div class="balance-label">CURRENT BALANCE</div>
        <div class="balance-amount">@balance.ToString("N2")DH</div>
    </div>
</div>
